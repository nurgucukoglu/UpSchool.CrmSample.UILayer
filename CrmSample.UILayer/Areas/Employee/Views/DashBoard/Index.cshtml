@model List<EmployeeTask>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_CrmLayout.cshtml";
}

<!DOCTYPE html>
<html lang="en">

@await Component.InvokeAsync("_HeadDashboardPartial")

<body>

   @await Component.InvokeAsync("_FeatureDashboardPartial")


    @await Component.InvokeAsync("_OverviewDashboardPartial")

   *@*@ @await Component.InvokeAsync("_ChartDashboardPartial")*@


    <div class="row">
        <div class="col-md-12 stretch-card">
            <div class="card">
                <div class="card-body">
                    <p class="card-title">Görev Listesi</p>
                    <div class="table-responsive">
                        <table id="recent-purchases-listing" class="table">
                            <thead>
                                <tr>
                                    <th>Başlık</th>
                                    <th>Durum</th>
                                    <th>Tarih</th>
                                    <th>Görevin Sorumlu Olduğu Personel</th>
                                   
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.Title</td>
                                        <td>@item.Status</td>
                                        <td>@item.Date.ToString("dd.MMM.yyyy")</td>
                                        <td>@item.AppUser.Name @item.AppUser.SurName</td>

                                    </tr>
                                }  
                               
                            </tbody>

                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>


    <script src="~/MajesticAdmin-Free-Bootstrap-Admin-Template-master/template/vendors/base/vendor.bundle.base.js"></script>
    <!-- endinject -->
    <!-- Plugin js for this page-->
    <script src="~/MajesticAdmin-Free-Bootstrap-Admin-Template-master/template/vendors/chart.js/Chart.min.js"></script>
    <script src="~/MajesticAdmin-Free-Bootstrap-Admin-Template-master/template/vendors/datatables.net/jquery.dataTables.js"></script>
    <script src="~/MajesticAdmin-Free-Bootstrap-Admin-Template-master/template/vendors/datatables.net-bs4/dataTables.bootstrap4.js"></script>
    <!-- End plugin js for this page-->
    <!-- inject:js -->
    <script src="~/MajesticAdmin-Free-Bootstrap-Admin-Template-master/template/js/off-canvas.js"></script>
    <script src="~/MajesticAdmin-Free-Bootstrap-Admin-Template-master/template/js/hoverable-collapse.js"></script>
    <script src="~/MajesticAdmin-Free-Bootstrap-Admin-Template-master/template/js/template.js"></script>
    <!-- endinject -->
    <!-- Custom js for this page-->
    <script src="~/MajesticAdmin-Free-Bootstrap-Admin-Template-master/template/js/dashboard.js"></script>
    <script src="~/MajesticAdmin-Free-Bootstrap-Admin-Template-master/template/js/data-table.js"></script>
    <script src="~/MajesticAdmin-Free-Bootstrap-Admin-Template-master/template/js/jquery.dataTables.js"></script>
    <script src="~/MajesticAdmin-Free-Bootstrap-Admin-Template-master/template/js/dataTables.bootstrap4.js"></script>
    <!-- End custom js for this page-->
    <script src="~/MajesticAdmin-Free-Bootstrap-Admin-Template-master/template/js/jquery.cookie.js" type="text/javascript"></script>
</body>

</html>



