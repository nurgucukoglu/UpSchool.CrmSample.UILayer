@model List<AppUser>

@{
    ViewData["Title"] = "Index";
    //Layout = "~/Views/Shared/_CrmLayout.cshtml";

    if (ViewBag.isUserAdmin)
    {
        Layout = "~/Views/Shared/_CrmLayout.cshtml";
    }
    else
    {
        Layout = "~/Views/Shared/_Layout.cshtml";
    }
}
<!--BU SAYFA USERMANAGER ARACILIĞIYLA KULLANICIALRI LİSTELEMEYİ SAĞLAYACAK-->

<h1>Index</h1>


<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Adı Soyad</th>
        <th>Mail</th>
        <th>Cinsiyet</th>
       @* <th>Sil</th>
        <th>Düzenle</th>
        <th>Detaylar</th>*@
    </tr>
    @foreach (var item in Model) //burda model yazınca yukarıya list yazmak gerekli.
    {
        <tr>
            <td>@item.Id</td>
            <td>@item.Name @item.SurName</td>
            <td>@item.Email</td>
            <td>@item.Gender</td>
            @*<td><a href="#" class="btn btn-outline-danger">Sil</a></td>
            <td><a href="#" class="btn btn-outline-success">Güncelle</a></td>
            <td><a href="#" class="btn btn-outline-dark">Detaylar</a></td>*@
        </tr>
    }
</table>
<a href="/Register/Index/" class="btn btn-primary me-2">Yeni Kullanıcı Kaydı</a>

