@model ResetPassword
@{
    ViewData["Title"] = "Index";
}

<div class="blankpage-form-field">
    <div class="page-logo m-0 w-100 bg-black align-items-center justify-content-center rounded border-bottom-left-radius-0 border-bottom-right-radius-0 px-4">
       
    </div>
    <div class="card p-4 border-top-left-radius-0 border-top-right-radius-0">
        <form asp-action="ResetPassword" method="post">
            <div class="form-group">
                <label asp-for="Password"></label>
                <input asp-for="Password" type="password" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="ConfirmPassword"></label>
                <input asp-for="ConfirmPassword" type="password" class="form-control" />
            </div>
            <input type="hidden" asp-for="Email" class="form-control" />
            <input type="hidden" asp-for="Token" class="form-control" />
            <button class="btn btn-primary" type="submit">Kaydet</button>
        </form>
    </div>
</div>



