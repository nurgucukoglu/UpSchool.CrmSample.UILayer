<!DOCTYPE html>

<h1>Role Atama İşlemleri</h1>

<form method="post">

    @for (int i = 0; i < Model.Count; i++) //rolleri listelicem
    {
        <div class="form-check">
            <input type="hidden" asp-for="@Model[i].RoleID" />
            <input type="hidden" asp-for="@Model[i].Name" />
            <input type="checkbox" asp-for="@Model[i].Exists" />
            <label class="form-check-label">@Model[i].Name</label>
        </div>
    }
    <button class="btn btn-dark">Rolleri Düzenle</button>

</form>