<h1>Yeni Personel Sayfası</h1>

<!--asp-for: core.un helperı-->
<!--p ye göre,span daha küçük yer kaplar.SAdece kendi verildiği boşluk kadar yer kaplar.-->
<form method="post">
    <label>Personel Adı</label>
    <input type="text" asp-for="EmployeeName" class="form-control" />
    <span asp-validation-for="EmployeeName" class="text-danger"></span> <!--eğer employeename de validation hatası olursa, o vali hatası span etiketi içinde gözükecek text danger olarak.-->
    <br />
     <label>Personel SoyAdı</label>
    <input type="text" asp-for="EmployeeSurName" class="form-control" />
    <span asp-validation-for="EmployeeSurName" class="text-danger"></span> <!--eğer employeename de validation hatası olursa, o vali hatası span etiketi içinde gözükecek text danger olarak.-->
    <br />
     <label>Personel Mail</label>
    <input type="text" asp-for="EmployeeMail" class="form-control" />
    <span asp-validation-for="EmployeeMail" class="text-danger"></span> <!--eğer employeename de validation hatası olursa, o vali hatası span etiketi içinde gözükecek text danger olarak.-->
    <br />
     <label>Personel Görsel</label>
    <input type="text" asp-for="EmployeeImage" class="form-control" />
    <span asp-validation-for="EmployeeImage" class="text-danger"></span> <!--eğer employeename de validation hatası olursa, o vali hatası span etiketi içinde gözükecek text danger olarak.-->
    <br />
    <label>Categori</label>
    @Html.DropDownListFor(x=> x.CategoryID,(List<SelectListItem>)ViewBag.v, new { @class="form-control"})
    <!-- [ List<SelectListItem>)ViewBag.v] BU DEĞER, [ x=> x.CategoryID] BURAYA GÖNDERİLECEK DEĞERLERİ KARŞILAYACAK.                                                             -->
    <span asp-validation-for="CategoryID" class="text-danger"></span> <!--eğer employeenamede validation hatası olursa, o vali hatası span etiketi içinde gözükecek text danger olarak.-->
    <br />
    <button class="btn btn-info">Personeli Kaydet</button>

</form>

